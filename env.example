# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/mtlverse
DATABASE_USERNAME=mtlverse_user
DATABASE_PASSWORD=mtlverse_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://mtlverse:mtlverse_password@localhost:5672

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# File Storage Configuration
# Option 1: Local file storage (FREE)
FILE_STORAGE_URL=http://localhost:8081
FILE_STORAGE_PATH=./uploads

# Option 2: Cloudflare R2 (FREE - 10GB/month)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key
R2_BUCKET_NAME=mtlverse
R2_PUBLIC_URL=https://your-bucket.your-account.r2.cloudflarestorage.com

# Option 3: Supabase Storage (FREE - 1GB)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_BUCKET_NAME=mtlverse

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=86400000

# External API Keys
WEBTOON_API_KEY=your-webtoon-api-key
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
DEEPL_API_KEY=your-deepl-api-key

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8000
TRANSLATION_MODEL_PATH=/models/translation

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_ML_SERVICE_URL=http://localhost:8000
REACT_APP_MINIO_URL=http://localhost:9000

# Mobile Configuration
FLUTTER_API_URL=http://localhost:8080/api
FLUTTER_ML_SERVICE_URL=http://localhost:8000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/mtlverse.log
